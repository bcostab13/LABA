<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imagenReq"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="false"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categoria"
        android:id="@+id/textViewNomReq"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imagenReq"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Lugar"
        android:id="@+id/textViewDescReq"
        android:layout_below="@+id/textViewNomReq"
        android:layout_alignLeft="@+id/textViewNomReq"/>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingbarDificultadReq"
        android:layout_below="@+id/textViewDescReq"
        android:layout_alignLeft="@+id/textViewNomReq"
        android:numStars="5"
        android:isIndicator="true"
        style="?android:attr/ratingBarStyleSmall"
        android:rating="5"/>
</RelativeLayout>


