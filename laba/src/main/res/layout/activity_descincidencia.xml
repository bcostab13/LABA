<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contenedorDescInc"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondomain">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="#FFFFFF"
            android:alpha="0.9"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="40dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descripción de Incidencia"
                android:id="@+id/textViewDescIncidencia"
                android:layout_marginTop="15dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="15dp"
                android:background="#000000"
                android:padding="4dp"
                android:textColor="#FFFFFF"
                android:textSize="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aquí va el estado"
                android:textAllCaps="true"
                android:layout_centerInParent="true"
                android:id="@+id/textViewEstado"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_below="@+id/textViewDescIncidencia"
                android:padding="1dp"
                android:textColor="#000000"
                android:textSize="12dp"/>

            <RelativeLayout
                android:gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/textViewEstado"
                android:layout_centerVertical="true">

                <LinearLayout
                    android:id="@+id/formA"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:weightSum="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/textViewCodIncid"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:text="Código:"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:background="#3B0B0B"/>

                    <TextView
                        android:id="@+id/textViewValCodIncid"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.63"
                        android:text="Aqui va el codigo"
                        android:layout_marginLeft="7dp"
                        />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/form0"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/formA"
                    android:weightSum="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/textViewTiempo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:text="F.Registro:"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:background="#DF0101"/>

                    <TextView
                        android:id="@+id/textViewValTiempo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.63"
                        android:text="Aqui va la fecha"
                        android:layout_marginLeft="7dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/form"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/form0"
                    android:weightSum="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/textViewCategoria"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:text="Categoria:"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:background="#DF3A01"/>

                    <TextView
                        android:id="@+id/textViewValCategoria"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.63"
                        android:text="Aqui va la categoria"
                        android:layout_marginLeft="7dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/form2"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/form"
                    android:weightSum="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/textViewLugar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:text="Lugar:"
                        android:textColor="#111111"
                        android:textStyle="bold"
                        android:background="#DF7401"/>
                    <TextView
                        android:id="@+id/textViewValLugar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.63"
                        android:text="Aqui va el lugar"
                        android:layout_marginLeft="7dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/form3"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/form2"
                    android:weightSum="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/textViewUsuario"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:text="Usuario:"
                        android:textColor="#111111"
                        android:textStyle="bold"
                        android:background="#DBA901"/>
                    <TextView
                        android:id="@+id/textViewValUsuario"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.63"
                        android:text="Aqui va el usuario"
                        android:layout_marginLeft="7dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/form4"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/form3"
                    android:weightSum="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/textViewDescrip"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.93"
                        android:text="Descripción:"
                        android:textColor="#111111"
                        android:textStyle="bold"
                        android:background="#D7DF01"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/form5"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/form4"
                    android:weightSum="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/textViewValDescrip"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.93"
                        android:text="Aqui va la descripcion"
                        android:textColor="#111111"
                        android:background="#FFFFFF"
                        android:inputType="textMultiLine" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/form6"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="7dp"
                    android:layout_below="@+id/form5"
                    android:weightSum="1"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.93"
                        android:src="@drawable/helpdesk"
                        android:scaleType="centerInside"/>

                </LinearLayout>

            </RelativeLayout>
        </RelativeLayout>



    </RelativeLayout>




</RelativeLayout>