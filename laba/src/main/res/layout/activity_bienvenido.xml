<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/fondomain"
    tools:context="example.laba.laba.main">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="170dp"
            android:layout_height="200dp"
            android:id="@+id/imageView_inicial"
            android:src="@drawable/mainim"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contenedorBienvenida"
            android:layout_below="@+id/imageView_inicial"
            android:gravity="center_horizontal">

            <TextView
                style="@style/TextoNivel1"
                android:text="Hola, :)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_bienvenida"
                android:layout_below="@+id/imageView_inicial"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:weightSum="1"
            android:layout_below="@+id/contenedorBienvenida"
            android:layout_centerInParent="true"
            android:padding="10dp">

            <Button
                style="@style/BotonOperacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonContinuar"
                android:text=" Continuar"/>

            <Button
                style="@style/BotonOperacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonCerrar"
                android:text=" Cerrar SesiÃ³n"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
