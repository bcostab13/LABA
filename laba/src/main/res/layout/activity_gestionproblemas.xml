<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <LinearLayout
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/fondomain">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:background="#FFFFFF"
                        android:alpha="0.9"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="40dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Control de Problemas"
                            android:id="@+id/textViewContProblemas"
                            android:layout_marginTop="15dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginLeft="15dp"
                            android:background="#000000"
                            android:padding="4dp"
                            android:textColor="#FFFFFF"
                            android:textSize="16dp"/>

                        <LinearLayout
                            android:id="@+id/form1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_below="@+id/textViewContProblemas"
                            android:layout_marginLeft="11dp"
                            android:layout_marginRight="11dp">
                                <TextView
                                    style="@style/TextoSugerido"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".35"
                                    android:layout_margin="2.5dp"
                                    android:text="Problema:"/>
                                <Spinner
                                    android:id="@+id/spinnerTipoP"
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight=".65"
                                    android:layout_margin="2.5dp"></Spinner>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/form2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_below="@+id/form1"
                            android:layout_marginLeft="11dp"
                            android:layout_marginRight="11dp">
                            <TextView
                                style="@style/TextoSugerido"
                                android:id="@+id/textViewA2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".35"
                                android:layout_margin="2.5dp"
                                android:text="Atributo2:"/>
                            <Spinner
                                android:id="@+id/spinnerA2"
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight=".65"
                                android:layout_margin="2.5dp"></Spinner>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/form3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_below="@+id/form2"
                            android:layout_marginLeft="11dp"
                            android:layout_marginRight="11dp">
                            <TextView
                                style="@style/TextoSugerido"
                                android:id="@+id/textViewA3"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".35"
                                android:layout_margin="2.5dp"
                                android:text="Atributo3:"/>
                            <Spinner
                                android:id="@+id/spinnerA3"
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight=".65"
                                android:layout_margin="2.5dp"></Spinner>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/form4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_below="@+id/form3"
                            android:layout_marginLeft="11dp"
                            android:layout_marginRight="11dp">
                            <TextView
                                style="@style/TextoSugerido"
                                android:id="@+id/textViewA4"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".35"
                                android:layout_margin="2.5dp"
                                android:text="Atributo4:"/>
                            <Spinner
                                android:id="@+id/spinnerA4"
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight=".65"
                                android:layout_margin="2.5dp"></Spinner>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/form6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_below="@+id/form4"
                            android:layout_marginLeft="11dp"
                            android:layout_marginRight="11dp"
                            android:layout_marginTop="5dp"
                            android:gravity="center">
                            <Button
                                style="@style/BotonOperacion"
                                android:id="@+id/buttonBuscar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" Buscar"
                                />
                            <Button
                                style="@style/BotonOperacion"
                                android:id="@+id/buttonMostrar"
                                android:layout_marginLeft="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" Mostrar Todo"
                                />
                        </LinearLayout>

                        <RelativeLayout
                            android:gravity="center"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_below="@+id/form6"
                            android:layout_centerVertical="true">

                            <LinearLayout
                                android:id="@+id/form"
                                android:orientation="horizontal"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:weightSum="1"
                                android:gravity="center">

                                <ListView
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight=".95"
                                    android:paddingLeft="@dimen/activity_horizontal_margin"
                                    android:paddingRight="@dimen/activity_horizontal_margin"
                                    android:paddingTop="@dimen/activity_vertical_margin"
                                    android:paddingBottom="@dimen/activity_vertical_margin"
                                    android:layout_marginBottom="10dp"
                                    android:layout_marginTop="10dp"
                                    android:id="@+id/listViewProblemas"
                                    android:divider="#eeeeee">

                                </ListView>

                            </LinearLayout>

                        </RelativeLayout>
                    </RelativeLayout>

            </RelativeLayout>


        </LinearLayout>



    <ListView android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/black"
        android:dividerHeight="1dp"
        android:background="#cecece"/>

</android.support.v4.widget.DrawerLayout>