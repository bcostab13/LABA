<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RelativeLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondomain">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="#FFFFFF"
            android:alpha="0.9"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="40dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registro de Requerimientos"
                android:id="@+id/textViewRegIncid"
                android:layout_marginTop="15dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="15dp"
                android:background="#000000"
                android:padding="4dp"
                android:textColor="#FFFFFF"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/textViewIndRegInc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Complete los datos del formulario:"
                android:layout_below="@+id/textViewRegIncid"
                android:layout_alignLeft="@+id/textViewRegIncid"
                android:layout_alignStart="@+id/textViewRegIncid"
                android:layout_marginTop="5dp"
                android:textSize="16dp"/>

            <RelativeLayout
                android:gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/textViewIndRegInc"
                android:layout_centerVertical="true">

                <LinearLayout
                    android:id="@+id/form3"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:weightSum="1"
                    android:gravity="center"
                    >

                    <TextView
                        style="@style/TextoSugerido"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:text="Registro:"
                        />

                    <EditText
                        android:id="@+id/editFecha"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.65"
                        android:hint="Fecha"
                        android:textSize="14dp"
                        android:editable="false"
                        android:enabled="true" />

                </LinearLayout>



                <LinearLayout
                    android:id="@+id/form2"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/form3"
                    android:layout_marginTop="0dp"
                    android:weightSum="1"
                    android:gravity="center"
                    >

                    <TextView
                        style="@style/TextoSugerido"
                        android:id="@+id/textViewLugar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:text="Lugar:"
                        />
                    <Spinner
                        android:id="@+id/spinnerLugar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.65"></Spinner>

                </LinearLayout>



                <LinearLayout
                    android:id="@+id/form4"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/form2"
                    android:layout_marginTop="0dp"
                    android:weightSum="1"
                    android:gravity="center"
                    >

                    <TextView
                        style="@style/TextoSugerido"
                        android:id="@+id/textViewCat"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:text="Categoría:"/>

                    <Spinner
                        android:id="@+id/spinnerCategoria"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.65">
                    </Spinner>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/formextra"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/form4"
                    android:layout_marginTop="0dp"
                    android:weightSum="1"
                    android:gravity="center"
                    >

                    <TextView
                        style="@style/TextoSugerido"
                        android:id="@+id/textViewFecha"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:text="Fecha Límite:"/>

                    <EditText
                        android:id="@+id/editTextfechaLimite"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.45">
                    </EditText>

                    <ImageButton
                        android:id="@+id/buttonSelectFecha"
                        android:layout_width="0dp"
                        android:layout_weight="0.2"
                        android:layout_height="wrap_content"
                        android:background="@drawable/botonpulsado"
                        android:drawableLeft="@drawable/ic_action_time"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/ic_action_time" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/form5"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/formextra"
                    android:layout_marginTop="0dp"
                    android:weightSum="1"
                    android:gravity="center"
                    >

                    <EditText
                        android:id="@+id/desc"
                        android:layout_width="0dp"
                        android:layout_weight=".9"
                        android:layout_height="100dp"
                        android:inputType="textMultiLine"
                        android:hint="Descripcion"
                        android:textSize="14dp"
                        android:gravity="left|top"
                        android:maxLength="250"
                        />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/form6"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/form5"
                    android:layout_marginTop="0dp"
                    android:weightSum="1"
                    android:gravity="center"
                    android:paddingTop="5dp">

                    <Button
                        style="@style/BotonOperacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Registrar"
                        android:id="@+id/buttonRegistrar"
                        android:height="10dp"
                        android:background="@drawable/botonpulsado"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="2dp"
                        />

                </LinearLayout>

            </RelativeLayout>
        </RelativeLayout>



    </RelativeLayout>



    <ListView android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="1dp"
        android:background="#cecece"/>
</android.support.v4.widget.DrawerLayout>