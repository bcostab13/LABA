<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!--Texto Nivel 1-->
    <style name="TextoNivel1">
        <item name="android:textColor">#F2F28C</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">monospace</item>
        <item name="android:shadowColor">#FFFFFF</item>
        <item name="android:shadowRadius">1.5</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">2</item>
    </style>

    <style name="TextoSugerido" >
        <item name="android:typeface">sans</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/llenar</item>
        <item name="android:padding">5dp</item>

    </style>

    <style name="BotonOperacion">
        <item name="android:background">@drawable/botonpulsado</item>
        <item name="android:drawableLeft">@drawable/bl</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

</resources>
